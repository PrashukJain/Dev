<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title><%=title%></title>
</head>
<body>
    <!-- <h1>My first app</h1> -->
<div class="menu-container">
<div class="menu" id="file">File</div>
<div class="menu" id="home">Home</div>
</div>
<div class="menu-options-container">
    <div class="menu-options" id="file-menu-options">
        <div id="New">New</div>
        <div id="Save">Save</div>
        <div id="Open">Open</div>
    </div>
    <div class="menu-options" id="home-menu-options">
        <div class="menu-group">
<div class="menu-row">
    <select name="" id="font-family">
        <option value="aerial">font-1</option>
        <option value="monospace">font-2</option>
        <option value="Georgia">font-3</option>
        <option value="sans-serif">font-4</option>
        <option value="Cambria">font-5</option>
    </select>
    <select name="" id="font-size">
        <option value="10">10</option>
        <option value="12">12</option>
        <option value="14">14</option>
        <option value="16">16</option>
        <option value="18">18</option>
    </select>
</div>
<div class="menu-row">
             <input type="button" id="bold" value="B">
                    <input type="button" id="underline" value="U">
                    <input type="button" id="italic" value="I">
                    <input type="color" id="bg-color" value="rebeccapurple">
                    <input type="color" id="text-color" value="gray">
</div>
        </div>
        <div class="menu-group">
            <input type="button" value="L" halign="left">
            <input type="button" value="C" halign="center">
            <input type="button" value="R" halign="right">
        </div>

    </div>

</div>


<div class="formulaBar">
    <input type="text" id="address-input" class="text-container ib">
    <input type="text" id="formula-input" class="formula-container ib"></div>
<div class="cell-container">
     <div id="top-left-cell"></div>
        <div id="top-row">
            <%for(let i=0;i<cols;i++){%>
            <div class="cell">
                <%=String.fromCharCode(i+65)%>
            </div>
            <%}%>
        </div>
        <div id="left-col">
            <%for(let j=1;j<=rows;j++){%>
            <div class="cell">
                <%=j%>
            </div>
            <%}%>
        </div>
        <div id="grid">
            <%for(let i=0;i<rows;i++){%>
                <div class="row">
                    <%for(let j=0;j<cols;j++){%>
                    <div class = "cell" contenteditable="true" r-id=<%=i%> c-id=<%=j%>>

                    </div>
                    <%}%>
                </div>
                <%}%>
        </div>
</div>
<div class="sheets">Sheets</div>
<script src="index.js"></script>
</body>
</html>